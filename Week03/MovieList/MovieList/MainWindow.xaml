<Window x:Class="MovieList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieList"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <StackPanel >
        <TextBlock x:Name="textBlockTitle" TextWrapping="Wrap" Text="Title:" />
        <TextBox x:Name="textBoxTitle" />
        <TextBlock x:Name="textBlockRealeseYear" TextWrapping="Wrap" Text="Release Year:" />
        <TextBox x:Name="textBoxReleaseYear" />
        <TextBlock x:Name="TextBlockDirector" TextWrapping="Wrap" Text="Who's the director?" />
        <TextBox x:Name="TextBoxDirector" />
        <TextBlock x:Name="TextBlockLength" TextWrapping="Wrap" Text="Waat's the length of the movie?" />
        <TextBox x:Name="TextBoxLength" />
        <TextBlock x:Name="TextBlockGenre" TextWrapping="Wrap" Text="What's the genre?" />
        <TextBox x:Name="TextBoxGenre" />
        <Button x:Name="buttonAddMovie" Content="Add Movie" Click="buttonAddMovie_Click" />
        <Button x:Name="buttonShowAll" Content="Show All Movies" Click="buttonShowAll_Click" />

    </StackPanel>
</Window>
